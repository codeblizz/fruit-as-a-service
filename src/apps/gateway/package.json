{
  "name": "@faas/gateway",
  "version": "1.0.0",
  "description": "Gateway API service with Fastify",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "pretest": "cd ../../packages/database && pnpm db:generate && pnpm db:push && pnpm db:seed",
    "posttest": "echo \"Test completed\""
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@fastify/cors": "^9.0.0",
    "@fastify/helmet": "^11.1.1",
    "@fastify/swagger": "^8.14.0",
    "@fastify/swagger-ui": "^2.1.0",
    "@paypal/paypal-js": "^8.2.0",
    "@prisma/client": "^5.10.0",
    "bcrypt": "^5.1.1",
    "fastify": "^4.26.0",
    "jsonwebtoken": "^9.0.2",
    "pino": "^8.17.0",
    "pino-pretty": "^10.3.1",
    "stripe": "^18.1.0"
  },
  "peerDependencies": {
    "axios": "^1.9.0",
    "zod": "^3.24.3"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/bcrypt": "^5.0.2",
    "@types/jest": "^29.5.11",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.11.0",
    "@types/paypal__checkout-server-sdk": "^1.0.8",
    "@types/supertest": "^2.0.16",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": ["**/tests/**/*.test.ts"],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "setupFiles": ["./src/tests/setup.ts"],
    "globalSetup": "./src/tests/global-setup.js",
    "globalTeardown": "./src/tests/global-teardown.js",
    "testTimeout": 30000,
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/tests/**/*.ts"
    ]
  }
}
