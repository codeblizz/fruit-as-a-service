{
  "extends": "../../../tsconfig.json",
  "compilerOptions": {
    "ignoreDeprecations": "6.0",
    "moduleResolution": "node",
    "noEmit": false,
    "declaration": true,
    "declarationDir": "./types",
    "outDir": "./lib",
    "rootDir": "./",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": ["env.ts", "index.ts"]
}
